<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:focusableInTouchMode="false">


    <LinearLayout
        android:id="@+id/card_parent_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:background="@drawable/rounded_border_bold_ripple"
        android:orientation="vertical"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:animateLayoutChanges="true"
                android:orientation="vertical"
                android:paddingStart="18dp"
                android:paddingTop="18dp"
                android:paddingEnd="18dp"
                android:paddingBottom="18dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:animateLayoutChanges="true"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="0.08">


                        <ImageView
                            android:id="@+id/card_icon"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_android"
                            android:visibility="visible" />

                        <com.google.android.material.progressindicator.CircularProgressIndicator
                            android:id="@+id/card_progress_bar"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:indeterminate="true"
                            android:progress="70"
                            android:visibility="gone"
                            app:indicatorColor="@color/colorAccent"
                            app:indicatorSize="30dp" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="-10dp"
                        android:layout_weight="0.7"
                        android:animateLayoutChanges="true"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/card_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/product_sans_bold"
                            android:text="Title"

                            android:textColor="@color/primaryTextColorDark"
                            android:textSize="19dp" />

                        <TextView
                            android:id="@+id/card_sub_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/product_sans_regular"
                            android:maxLines="1"
                            android:text="Sub Title"
                            android:textColor="@color/primaryTextColorLight"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:animateLayoutChanges="true"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/card_completed_check"
                                android:layout_width="30dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="end"
                                android:src="@drawable/ic_baseline_check_24"
                                android:visibility="gone"
                                app:tint="@color/green" />

                            <androidx.cardview.widget.CardView

                                android:id="@+id/card_tag_card"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:visibility="visible"
                                app:cardBackgroundColor="@color/green_light_dark_bg"
                                app:cardCornerRadius="200dp"
                                app:cardElevation="0dp">

                                <TextView
                                    android:id="@+id/card_tag_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/product_sans_regular"
                                    android:paddingStart="10dp"
                                    android:paddingTop="4dp"
                                    android:paddingEnd="10dp"
                                    android:paddingBottom="4dp"
                                    android:text="Tag"
                                    android:textColor="@color/green_light_dark_text"
                                    android:textSize="13dp" />
                            </androidx.cardview.widget.CardView>
                        </FrameLayout>
                    </LinearLayout>


                </LinearLayout>


                <TextView
                    android:id="@+id/card_description_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/product_sans_regular"
                    android:maxLines="6"
                    android:text="Description"
                    android:textColor="@color/primaryTextColorLight"
                    android:textSize="14sp" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>
