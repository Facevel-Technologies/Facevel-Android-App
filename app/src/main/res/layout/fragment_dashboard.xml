                    android:layout_width="11dp"
                    android:layout_height="25dp"
                    android:layout_weight=".1"
                    app:srcCompat="@drawable/settings_fill"
                    app:tint="@color/iconTintColor" />
            </LinearLayout>
        </LinearLayout>

